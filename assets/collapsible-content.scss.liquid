
.accordion {
    & {
        margin-top: 2.5rem;
        margin-bottom: 0;
        border: 1px solid black;
        border-bottom: 1px solid black;
    }

	summary {
		display: flex;
		position: relative;
		line-height: 1;
		padding: 1rem 0.5rem;
	}

	.summary__title {
		display: flex;
		flex: 1;
	}

    .icon-caret {
        width: 1.5rem;
    }

	+ .accordion
        margin-top: 0;
        border-top: none;
	}

	.icon-accordion {
		align-self: center;
		fill: black;
		margin-right: 1rem;
		width: 1rem;
	}

	details[open] > summary .icon-caret {
		transform: rotate(180deg);
	}
}


.accordion__title {
	display: inline-block;
	max-width: calc(100% - 6rem);
	min-height: 1.6rem;
	margin: 0;
	word-break: break-word;
}

.accordion__content {
	margin-bottom: 1.5rem;
	word-break: break-word;
	overflow-x: auto;
	padding: 0 0.6rem;
	img {
		max-width: 100%;
	}
}
